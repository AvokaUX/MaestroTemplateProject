{
  "category": "Containers",
  "label": "Accordion",
  "html": "accordion.html",
  "js": "accordion.js",
  "css": "accordion.css",
  "icon": "accordion.png",
  "propDefs": {
    "showMoreIcon": {
      "label": "Icon when closed",
      "type": "icon",
      "imageStyleTarget": "show more icon",
      "value": "fa fa-angle-right",
      "helpText": "Select the show more icon"
    },
    "showLessIcon": {
      "label": "Icon when open",
      "type": "icon",
      "imageStyleTarget": "Show less icon",
      "value": "fa fa-angle-down",
      "helpText": "Select the show less icon"
    },
    "allowMultipleOpen": {
      "label": "Allow multiple open sections",
      "type": "boolean",
      "value": false,      
      "helpText": "Tick if you want multiple accordion sections openning while user interacts."
    },
    "transitionDuration": {
      "label": "Transition duration",
      "type": "integer",
      "value": 300,
      "preventNegative": true,
      "helpText": "Set transition duration of accordion in ms."
    },
    "showNextButton": {
      "label": "Show next button in accordion",
      "type": "boolean",
      "value": true,
      "helpText": "Tick if you want open next button showing in accordion sections."
    },
    "openText": {
      "label": "Toggle button label when closed",
      "type": "richText",      
      "value": "Show more"
    },
    "closeText": {
      "label": "Toggle button label when open",
      "type": "richText",     
      "value": "Show less"
    }
  },
  "rows": [
    []
  ],
  "validChildren": [
    "accordion-section"
  ],
  "styles": [
    "av-form-field",
    "accordion-style"
  ],
  "noData": true,
  "exMandatory": true
}